{
  "name": "docsidepanel",
  "displayName": "DocSidePanel",
  "description": "A side panel to access a folder with all the documentation in markdown",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docsidepanel.openDoc",
        "title": "Open Document"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "documentationSidePanel",
          "title": "Panel for Documentation",
          "icon": "resources/icons/light/book.svg"
        }
      ]
    },
    "views": {
      "documentationSidePanel": [
        {
          "id": "explorer",
          "name": "Documentation list",
          "contextualTitle": "The list of documents"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
